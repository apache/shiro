<config xmlns="http://www.ehcache.org/v3"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.ehcache.org/v3 https://www.ehcache.org/schema/ehcache-core-3.3.xsd">
    <persistence directory="${java.io.tmpdir}/shiro-sprhib-ehcache"/>

    <cache-template name="default">
        <key-type>java.io.Serializable</key-type>
        <value-type>java.io.Serializable</value-type>
        <expiry>
            <ttl unit="minutes">10</ttl>
        </expiry>
        <resources>
            <heap>1000</heap>
            <disk unit="MB">50</disk>
        </resources>
    </cache-template>

    <!--=================================================================
        Hibernate Object Caches
        =================================================================-->

    <cache alias="org.apache.shiro.samples.sprhib.model.Role" uses-template="default">
        <expiry>
            <none/>
        </expiry>
        <heap>100</heap>
    </cache>

    <cache alias="org.apache.shiro.samples.sprhib.model.Role.permissions" uses-template="default">
        <expiry>
            <none/>
        </expiry>
        <heap>100</heap>
    </cache>

    <cache alias="org.apache.shiro.samples.sprhib.model.User" uses-template="default">
        <expiry>
            <ttl unit="hours">1</ttl>
        </expiry>
        <heap>1000</heap>
    </cache>

    <cache alias="org.apache.shiro.samples.sprhib.model.User.roles" uses-template="default">
        <expiry>
            <ttl unit="hours">1</ttl>
        </expiry>
        <heap>1000</heap>
    </cache>
</config>
